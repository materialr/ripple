{
  "name": "@materialr/ripple",
  "version": "0.0.0-development",
  "description": "Material ripple foundation implementation for React",
  "main": "lib/index.js",
  "scripts": {
    "build:production": "babel src --out-dir lib --ignore **/*.test.js,**/*.test.jsx",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "eslint --ext .js .",
    "semantic-release": "semantic-release",
    "test": "npm run lint && npm run test:vulnerabilities && npm run test:scripts",
    "test:scripts": "jest --coverage",
    "test:vulnerabilities": "nsp check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/materialr/ripple.git"
  },
  "keywords": [
    "React",
    "Material",
    "Ripple",
    "Foundation"
  ],
  "author": "Hendrik Volschenk <righteous.trespasser@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/materialr/ripple/issues"
  },
  "homepage": "https://github.com/materialr/ripple#readme",
  "dependencies": {
    "@material/ripple": "^0.29.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^22.1.4",
    "nsp": "^3.1.0",
    "semantic-release": "^12.2.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ]
  }
}
